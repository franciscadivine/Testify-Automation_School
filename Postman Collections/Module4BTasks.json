		{
			"name": "Get books",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "f1f86d14-fbec-48ab-b6a8-cd27b851e068",
						"exec": [
							"pm.test(\"status code is 200\",function(){",
							"    pm.response.to.have.status(200);",
							"})",
							"//Test to check that a non-fiction book with id 5 has a name \"Untamed\"",
							"var jsonData = pm.response.json();",
							"pm.test(\"to confirm the id is equal to the expect number\", function () {",
							"    pm.expect(jsonData[5].id).to.equal(5)",
							"})",
							"pm.test(\"The book with id 5 has the name 'Untamed'\",function(){",
							"    pm.expect(jsonData[5].name).to.equal(\"Untamed\")",
							"})",
							"pm.test(\"The book with id 5 is a non-fiction book\", function () {",
							"    pm.expect(jsonData[5].type).to.equal(\"non-fiction\")",
							"})",
							"console.log(jsonData[0].id)",
							"pm.environment.set(\"book_id\", jsonData[0].id)",
							"pm.globals.set(\"book_id\", jsonData[0].id)",
							"//pm.collectionVariables.set(\"book_id\", jsonData[0].id)",
							"",
